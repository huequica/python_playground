root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4

[*.{ini,py,py.tpl,rst}]
indent_style = space
indent_size = 4

[*.py]
max_line_length = 119

[*.html]
indent_size = 2

[*.{sh,bat.tpl,Makefile.tpl}]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore
